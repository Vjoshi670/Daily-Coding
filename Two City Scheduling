class Solution {
    public int twoCitySchedCost(int[][] costs) {
         int cost = 0, n = costs.length;
        int[] refund = new int[n];
        for(int i=0;i<n;i++){
            cost += costs[i][0];
            refund[i] = costs[i][1]-costs[i][0];
        }
        Arrays.sort(refund);
        for(int i=0;i<n/2;i++){
            cost+=refund[i];
        }
        return cost;
    }
}
