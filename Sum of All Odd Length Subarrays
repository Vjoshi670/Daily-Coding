class Solution {
    public int sumOddLengthSubarrays(int[] arr) {
         int n = arr.length;
        int sum = 0;

        for(int i = 0 ; i < n ; i++){
            int totalSubarray = (i+1)*(n-i);
            int oddSubarray   =  totalSubarray / 2;

            if(totalSubarray % 2 != 0){
                oddSubarray++;
            }

            sum+= oddSubarray * arr[i];
        }

        return sum;
    }
}
